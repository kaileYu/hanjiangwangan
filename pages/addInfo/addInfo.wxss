/* pages/addInfo/addInfo.wxss */
.add-info-header {
  width: 100%;
  height: 176rpx;
}

.add-info-header image {
  width:100%;
  height: 100%;
}

.add-info-content{
  padding: 30rpx;
}

.info-content-title{
  width: 100%;
  height: 140rpx;
  box-sizing: border-box;
  padding: 0 40rpx 0 20rpx;
  background: #fff;
  color:#333;
  font-size:30rpx;
  border-radius: 10rpx;
}
.input-title {
  width: 530rpx;
  height: 60rpx;
  border:1rpx solid rgba(201,201,201,1);
  border-radius:10rpx;
  box-sizing: border-box;
  padding-left: 10rpx;
}

.info-content-content{
  width: 100%;
  box-sizing: border-box;
  padding:40rpx 40rpx 40rpx 20rpx;
  background: #fff;
  color:#333;
  font-size:30rpx;
  border-radius: 10rpx;
  margin-top: 20rpx;
}
.input-content{
  width:470rpx;
  height:180rpx;
  border:1rpx solid rgba(201,201,201,1);
  border-radius:10rpx;
  box-sizing: border-box;
  padding: 10rpx;
}

/* 图片上传框 */
.image-upload-box {
  display:flex;
  flex-wrap: wrap;
}
.image-item {
  width: 140rpx;
  height: 160rpx;
  position: relative;
  box-sizing: border-box;
  padding: 10rpx;
}
.image-item image {
  width:120rpx;
  height: 120rpx;
}
.image-item .remove-image{
  width:30rpx;
  height:60rpx;
  position: absolute;
  top: -3rpx;
  right:10rpx;
}
.upload-image {
  width:140rpx;
  height:140rpx;
  border:1rpx solid rgba(201,201,201,1);
  border-radius:10rpx;
}

.upload-image image{
  width: 80rpx;
  height:80rpx;
}
.extra-info{
  font-size:20rpx;
  font-family:Adobe Heiti Std;
  font-weight:normal;
  color:rgba(62,123,250,1);
  line-height:30rpx;
}
.upload-btn{
  width: 200rpx!important;
  padding: 10rpx!important;
  margin: 20rpx 0!important;
  color:#fff;
  background: #ffa500;
  font-weight: normal;
}
.submit-btn{
  position: fixed;
  width: 100%;
  height: 100rpx;
  bottom: 0;
  left: 0;
  background: #f66;
}
.submit-btn button::after{
  border: none;
}
.submit-btn button{
  padding: 0 !important;
  margin: 0 !important;
  border-radius: 0 !important;
  width: 100% !important;
  line-height:  100rpx!important;
}
.cancle-color{
  background: #C3D5FF;
  color:#333;
  font-size:36rpx;
  font-weight:normal;
}
.submit-color{
  background:linear-gradient(90deg,rgba(58,125,253,1),rgba(76,115,239,1));
  color:#fff;
  font-size:36rpx;
  font-weight:normal;
}