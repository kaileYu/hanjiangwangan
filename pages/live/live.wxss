/* pages/live/live.wxss */
.live-header {
  width: 100%;
  height:400rpx;
}
.live-header image{
  width: 100%;
  height: 100%;
}

.live-list-title{
  width:100%;
  height: 80rpx;
  box-sizing: border-box;
  padding: 30rpx 30rpx 20rpx;
  color: #666666;
  font-size: 30rpx;
  line-height: 30rpx;
}
.live-list-title image{
  width:20rpx;
  height:20rpx;
}
.live-list {
  box-sizing: border-box;
  padding: 0rpx 30rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.live-list-item{
  width:330rpx;
  margin-bottom: 30rpx;
}
.live-list-item .cover-image{
  width: 100%;
  height: 200rpx;
  position: relative;
}
.host-info {
  position: absolute;
  width: 100%;
  height: 40rpx;
  box-sizing: border-box;
  padding: 0 20rpx 10rpx;
  bottom: 0;
  font-size:24rpx;
  color:#fff;
}
.live-list-item .cover-image .host-info image{
  width:22rpx;
  height:30rpx;
  margin-right:10rpx;
}
.live-list-item .cover-image image {
  width:100%;
  height: 200rpx;
}

.start-live-btn{
  width:100rpx;
  height:100rpx;
  color: #fff;
  font-size:24rpx;
  text-align: center;
  line-height: 100rpx;
  background:linear-gradient(90deg,rgba(58,125,253,1),rgba(76,115,239,1));
  box-shadow:0px 4px 9px 0px rgba(77,126,247,0.61);
  border-radius:50%;
  position: fixed;
  bottom: 30rpx;
  left:50%;
  transform: translateX(-50%);
}

.live-content{
  padding: 20rpx;
  box-sizing: border-box;
  width:100%;
  background: #fff;
}
.live-title{
  color:#333;
  font-size:24rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  line-height: 24rpx;
  height:26rpx;
}
.live-classify{
  color:#999999;
  font-size: 20rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  line-height: 20rpx;
  height:22rpx;
  margin-top: 20rpx;
}

.no-live-status{
  margin: 250rpx auto 0;
  color: #999;
  font-size:26rpx;
  text-align: center;
}

.no-live-status image{
  width:128rpx;
  height:128rpx;
}