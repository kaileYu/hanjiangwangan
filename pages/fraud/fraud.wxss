/* pages/fraud/fraud.wxss */
.fraud-top,.fraud-top-image {
  width: 750rpx;
  height: 400rpx;
}

.navbar {
  height: 80rpx;
  display: flex;
  flex-direction: row;
  background: white;
}

.navbar-item {
  flex: 1;
  text-align: center;
  line-height: 80rpx;
  font-size: 30rpx;
  color: rgba(153, 153, 153, 1);
  position: relative;
}

.navbar-item-active {
  flex: 1;
  text-align: center;
  line-height: 80rpx;
  font-size: 30rpx;
  color: rgba(62, 123, 250, 1);
  position: relative;
}

.navbar-item-active::after {
  width: 39rpx;
  height: 5rpx;
  background: rgba(76, 115, 239, 1);
  border-radius: 3px;
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}

.navbar-item-list {
  width: 690rpx;
  margin: 30rpx auto 0 auto;
}

.navbar-item-list-title {
  font-size: 30rpx;
  color: rgba(51, 51, 51, 1);
  line-height: 30rpx;
}

.video-list-item {
  width: 690rpx;
  height: 200rpx;
  margin-top: 19rpx;
  background: white;
  border-radius: 10px;
}

.video-list-item-cell {
  width: 640rpx;
  height: 186rpx;
  display: flex;
  padding-top: 14rpx;
  padding-left: 14rpx;
}

.video-list-item-image {
  width: 172rpx;
  height: 172rpx;
  flex: 1;
}

.video-list-item-info {
  flex: 3;
  margin: 8rpx 0 0 25rpx;
}

.video-list-item-info-title {
  font-size: 30rpx;
  color: rgba(51, 51, 51, 1);
  line-height: 14px;
  
}

.video-list-item-info-integral {
  font-size: 24rpx;
  color: rgba(102, 102, 102, 1);
  line-height: 36rpx;
  margin-top: 17rpx;
}

.text {
  font-size: 24rpx;
  color: #E8441A;
  line-height: 24rpx;
}

.video-list-item-info-bottom {
  display: flex;
  margin-top: 30rpx;
}

.video-list-item-info-click,
.video-list-item-info-time {
  flex: 1;
  font-size: 20rpx;
  color: rgba(153, 153, 153, 1);
  line-height: 36px;
}

.video-list-item-info-time {
  text-align: end;
}