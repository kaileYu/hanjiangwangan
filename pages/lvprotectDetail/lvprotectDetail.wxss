/* pages/lvprotectDetail/lvprotectDetail.wxss */
.lvprotectDetail {
  width: 750rpx;
  height: 100%;
  background: rgba(244, 244, 250, 1);
}
.lvprotectDetail-cell{
  width: 690rpx;
  margin: 30rpx auto 100rpx auto;
  border-radius: 10rpx;
}

.text-area {
  min-height: calc(100vh - 130rpx);
  width: 690rpx;
  background: white;
  position: relative;
}

.text-area-content {
  width: 630rpx;
  font-size: 24rpx;
  color: rgba(102, 102, 102, 1);
  line-height: 36rpx;
  margin: 0 auto;
  padding-top: 20rpx;
}

.text-area-local {
  font-size: 30rpx;
  color: rgba(51, 51, 51, 1);
  line-height: 30rpx;
  margin-left: 6rpx;
}

.text-area-time {
  font-size: 30rpx;
  color: rgba(51, 51, 51, 1);
  line-height: 30rpx;
}

.lvprotectDetail-bottom {
  width: 750rpx;
  height: 100rpx;
  background: linear-gradient(90deg, rgba(58, 125, 253, 1), rgba(76, 115, 239, 1));
  position: fixed;
  bottom: 0;
  text-align: center;
  font-size: 36rpx;
  color: white;
  line-height: 100rpx;
  font-weight: normal;
}