/* pages/myVoiceList/myVoiceList.wxss */
.padding-30{
  padding: 30rpx;
  box-sizing: border-box;
}
.voide-list-item {
  width: 100%;
  height:130rpx;
  box-sizing: border-box;
  padding: 12rpx 20rpx 12rpx 12rpx;
  margin-top: 20rpx;
  background:rgba(255,255,255,1);
  border-radius:10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center
}

.voice-item-pic{
  width:106rpx;
  height:106rpx;
  background:rgba(232,239,255,1);
  border-radius:10rpx;
}
.voice-item-pic image{
  width: 60rpx;
  height: 60rpx;
}
.voice-item-content{
  flex: 1;
  margin-left: 22rpx;
  display: flex;
  height: 106rpx;
  flex-direction: column;
  justify-content: space-between;
}
.voice-item-title{
  width: 328rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  margin-right: 30rpx;
  color:#333333;
  font-size:30rpx;
}
.voice-item-status{
  padding: 0 12rpx;
  height: 32rpx;
  line-height: 32rpx;
  border-radius: 32rpx;
  font-size:18rpx;
}
.yellow{
  border:1px solid #F8B551;
  color:#F8B551;
}
.blue {
  border:1px solid rgba(66,121,247,1);
  color:rgba(66,121,247,1); 
}
.red {
  border:1px solid red;
  color:red; 
}
.see-more{
  color:#999999;
  font-size:20rpx;
}

.nothing-pic{
  display:flex;
  justify-content: center;
  padding-top: 240rpx;
}

.nothing-pic image{
  width: 212rpx;
  height:199rpx;
  margin-left:40rpx;
}