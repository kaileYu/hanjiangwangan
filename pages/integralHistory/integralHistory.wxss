/* pages/integralHistory/integralHistory.wxss */
.integral {
  width: 690rpx;
  margin: 0 auto;
}

.integral-item {
  height: 160rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 10px;
  margin-top: 30rpx;
}

.integral-item-time {
  font-size: 24rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  padding-left: 24rpx;
}

.integral-item-bottom {
  display: flex;
  padding-left: 24rpx;
  margin-top: 30rpx;
}

.integral-item-bottom-image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 10px;
}

.integral-item-bottom-info {
  padding-left: 24rpx;
}

.integral-item-bottom-info-title {
  font-size: 24rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.integral-item-bottom-info-num {
  font-size: 24rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  margin-top: 15rpx;
}

.point {
  flex: 1;
  font-size: 24rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  text-align: end;
  padding-right: 40rpx;
}
.noneRecord{
  text-align: center;
  margin: 30rpx 0;
}