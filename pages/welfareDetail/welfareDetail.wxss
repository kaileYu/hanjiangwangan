/* pages/welfareDetail/welfareDetail.wxss */
.welfare {
  width: 690rpx;
  margin: 30rpx auto 0rpx auto;
}

.top-image {
  width: 690rpx;
  height: 400rpx;
}

.welfare-info {
  width: 690rpx;
  height: 150rpx;
  background: linear-gradient(90deg, rgba(58, 125, 253, 1), rgba(76, 115, 239, 1));
  display: flex;
  margin-top: -7rpx;
}

.welfare-info-title,
.welfare-info-value {
  flex: 1;
}

.welfare-info-title-box {
  margin: 26rpx 0 0 38rpx;
}

.title {
  font-size: 30rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}

.num {
  font-size: 20rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  opacity: 0.5;
}

.welfare-info-value-box {
  width: 300rpx;
  height: 88rpx;
  background: rgba(255, 255, 255, 1);
  margin-top: 30rpx;
  display: flex;
}

.welfare-info-value-point {
  flex: 3;
  font-size: 36rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 500;
  color: rgba(240, 44, 44, 1);
  line-height: 88rpx;
  margin-left: 20rpx;
}

.welfare-info-value-price {
  flex: 2;
  font-size: 20rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 88rpx;
  /* margin-left: 10rpx; */
  text-align: center;
}

.welfare-intro {
  width: 690rpx;
  height: calc(100vh - 740rpx);
  background: white;
}

.welfare-intro-title {
  font-size: 30rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  padding: 30rpx 0 30rpx 30rpx;
}

.welfare-description {
  width: 610rpx;
  margin: 0 auto;
  font-size: 24rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}

.welfare-bottom,.welfare-bottom-none {
  position: fixed;
  bottom: 0;
  width: 750rpx;
  height: 100rpx;
}
.welfare-bottom{
  background: linear-gradient(90deg, rgba(58, 125, 253, 1), rgba(76, 115, 239, 1));
}
.welfare-bottom-none {
  background:rgba(160,160,160,1);
}
.welfare-bottom-button,.welfare-bottom-button-none {
  position: relative;
  top: 50%;
  transform: translateY(-50%);
}
.welfare-bottom-button{
  background: linear-gradient(90deg, rgba(58, 125, 253, 1), rgba(76, 115, 239, 1));
}
.welfare-bottom-button-text {
  color: white;
  font-size: 36rpx;
  font-weight: 400;
}

.welfare-bottom-button-none{
  background:rgba(160,160,160,1);
}