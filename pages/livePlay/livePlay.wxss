/* pages/livePlay/livePlay.wxss */
.live-play{
  position: relative;
  display: block;
}
.fly-barrage {
  width:100%;
  height:100%;
  position:relative;
}
.live-text{
  width:70rpx;
  height:30rpx;
  position: absolute;
  top: 10rpx;
  left:30rpx;
  border:1rpx solid rgba(66,121,247,1);
  border-radius:6rpx;
  color: #4279F7;
  line-height:  30rpx;
  text-align: center;
  font-size: 20rpx;
}

.live-setting{
  width: 100%;
  height: 70rpx;
  background:rgba(0,0,0,.3);
  position: absolute;
  bottom: 0;
  box-sizing: border-box;
  padding: 0 30rpx 0 40rpx;
  font-size: 30rpx;
  color:#fff;
  z-index: 99;
}

.live-setting-left image{
  height:38rpx;
  width: 60rpx;
}

.live-setting-right image{
  height:38rpx;
  width: 60rpx;
}

.live-tab{
  width: 100%;
  height: 80rpx;
  padding:0 40rpx;
  color: #999999;
  font-size: 30rpx;
  box-sizing: border-box;
  background: #fff;
}

.actived{
  color:#3B7CFC;
  position:relative;
}

.actived::after {
  content: '';
  width:39rpx;
  height:5rpx;
  background:linear-gradient(90deg,rgba(58,125,253,1),rgba(76,115,239,1));
  border-radius:3rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: -13rpx;
}
.scroll-view_H{
  height: calc(100vh - 500rpx);
}
.interactive{
  height: calc(100vh - 500rpx);
  width:100%;
}
.anchor{
  height: calc(100vh - 500rpx);
  width:100%;
  box-sizing: border-box;
  padding: 50rpx 40rpx;
}
.anchor-info image{
  width:100rpx;
  height:100rpx;
  border-radius: 50%;
  margin-right: 32rpx;
}
.anchor-name{
  font-size: 36rpx;
  color: #333;
  margin-bottom: 12rpx;
}
.anchor-introduction {
  font-size: 24rpx;
  color: #666;
}

.chat-box-item{
  width:100%;
  height:100%;
  box-sizing: border-box;
  padding: 30rpx 30rpx 100rpx;
}
.chat-box-item-warn{
  padding-bottom:10px;
  color:red;
  font-size: 28rpx;
}
.chat-box-content-item{
  color:#666;
  font-size: 30rpx;
  display: flex;
  align-items: flex-start;
  margin-bottom:16rpx;
}
.chat-box-content-item image{
  width: 60rpx;
  height:60rpx;
  border-radius: 50%;
  margin-right:15rpx;
}

/* 底部输入框 */
.input-box {
  width: 100%;
  height:60rpx;
  position: fixed;
  padding: 0 30rpx 10rpx;
  box-sizing: border-box;
  background:#fff;
}
.input-box input{
  border: 1rpx solid #3B7CFC;
  border-radius: 30rpx;
  padding:5rpx 30rpx;
}
.input-box image {
  width:50rpx;
  height: 50rpx;
  margin-left: 20rpx;
}