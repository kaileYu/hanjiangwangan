/* pages/alert/alert.wxss */
.lvprotect {
  height: 750rpx;
  background: rgba(244, 244, 250, 1);
}

.lvprotect-top {
  margin: 20rpx 0 0 30rpx;
  position: relative;
  display: flex;
}

.search {
  width: 580rpx;
  height: 50rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 10px;
  padding-left: 10rpx;
}

.search-btn {
  width: 90rpx;
  height: 50rpx;
  background: linear-gradient(90deg, rgba(58, 125, 253, 1), rgba(76, 115, 239, 1));
  border-radius: 10px;
}

.search-btn-text {
  height: 50rpx;
  line-height: 50rpx;
  color: white;
  font-size: 24rpx;
  font-weight: normal;
}

.icon {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

.search-text {
  position: absolute;
  padding-left: 10rpx;
}

.text {
  font-size: 30rpx;
  font-weight: normal;
  color: rgba(153, 153, 153, 1);
  line-height: 50rpx;
  margin-left: 50rpx;
}

.lvprotect-list {
  width: 690rpx;
  margin: 0 auto;
  border-radius: 10rpx;
}

.lvprotect-list-item {
  width: 690rpx;
  height: 200rpx;
  margin-top: 30rpx;
  background: white;
}

.lvprotect-list-item-cell {
  display: flex;
}

.lvprotect-list-item-cell-image {
  width: 172rpx;
  height: 172rpx;
  margin: 14rpx 0 14rpx 14rpx;
}

.lvprotect-list-item-cell-info {
  width: 447rpx;
  margin-left: 25rpx;
  margin-top: 22rpx;
}

.lvprotect-list-item-cell-info-title {
  font-size: 30rpx;
  font-family: Adobe Heiti Std;
  font-weight: normal;
  color: rgba(51, 51, 51, 1);
}

.lvprotect-list-item-cell-info-intro {
  font-size: 24rpx;
  font-weight: normal;
  color: rgba(102, 102, 102, 1);
  line-height: 36rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.lvprotect-bottom {
  margin: 49rpx auto 160rpx auto;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(207, 207, 207, 1);
  text-align: center;
}
.nonedata{
  text-align: center;
  margin-top: 100rpx;
  color:rgba(153,153,153,1);
}