@import "./froalaStyle.wxss";

.top-video {
  width: 750rpx;
  height: 420rpx;
  opacity: 1;
}

.nav {
  width: 100%;
  height: 60rpx;
  background: white;
  display: flex;
  border-bottom: 1rpx solid #ccc;
  line-height: 60rpx;
  position: relative;
}

.nav-info,
.nav-comment {
  margin-left: 30rpx;
}

.nav-info-active,
.nav-comment-active {
  margin-left: 30rpx;
  border-bottom: 2rpx solid red;
}

.swiper {
  height: calc(100vh - 481rpx);
}

.info {
  width: 750rpx;
  height: 215rpx;
  background: white;
  position: relative;
  border-bottom: 1rpx solid #eee;
  margin-top: 20rpx;
}

.title {
  padding: 30rpx 0 0 42rpx;
  font-size: 30rpx;
  color: rgba(51, 51, 51, 1);
  line-height: 30rpx;
  width: 370rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

.scroll {
  height: 120rpx;
}

.videoList {
  background: white;
  padding: 20rpx 0;
}

.videoList-top {
  display: flex;
}

.videoList-title {
  padding-left: 30rpx;
  flex: 1;
}

.all {
  font-size: 26rpx;
  color: #aaa;
  padding-right: 20rpx;
}

.videoList-cell {
  overflow: hidden;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  overflow: hidden;
}

.videoList-item,
.videoList-item-active {
  width: 160rpx;
  height: 80rpx;
  border: 1rpx solid #eee;
  text-align: center;
  line-height: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  margin: 0 20rpx;
  white-space: nowrap;
}

.videoList-item {
  border: 1rpx solid #eee;
  color: #999;
}

.videoList-item-active {
  border: 1rpx solid rgb(238, 74, 74);
  color: rgb(238, 74, 74);
}

.send-danmu {
  position: absolute;
  right: 5%;
  display: flex;
  width: 300rpx;
  height: 50rpx;
  border-radius: 30rpx;
  border: 1rpx solid #ccc;
}

.input-danmu {
  width: 220rpx;
  background: #ddd;
  padding-left: 10rpx;
  height: 100%;
  border-radius: 30rpx 0 0 30rpx;
  margin-left: -1rpx;
}

.placeholder {
  font-size: 26rpx;
  color: #aaa;
}

.danmu-image-box {
  width: 60rpx;
  height: 50rpx;
  background: white;
  border-radius: 0 30rpx 30rpx 0;
  position: relative;
}

.danmu-image {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.fly-barrage {
  width: 100%;
  height: 80%;
  position: absolute;
  color: white;
}

.intro {
  font-size: 24rpx;
  color: rgba(153, 153, 153, 1);
  line-height: 30rpx;
  margin: 30rpx 0 0 42rpx;
}

.none-comment,
.none {
  text-align: center;
}

.none-comment {
  padding-top: 50rpx;
}

.none {
  font-size: 30rpx;
  font-family: Adobe Heiti Std;
  font-weight: normal;
  color: rgba(207, 207, 207, 1);
  line-height: 14rpx;
  /* margin-bottom: 50rpx; */
}

.reply-reply,
.replay-name {
  font-size: 30rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
  line-height: 30rpx
}

.reply-reply {
  color: rgba(102, 102, 102, 1);
}

.reply-name {
  color: rgba(153, 153, 153, 1);
}

.voice-detail-comment {
  width: 100%;
  background: #fff;
  box-sizing: border-box;
  padding: 56rpx 50rpx 80rpx 20rpx;
  border-radius: 10rpx;
  color: #999;
  font-size: 30rpx;
  margin-bottom: 50rpx;
}

.comment-list-item image {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}

.comment-list-item {
  margin-bottom: 30rpx;
}

.comment-item-content-name {
  font-size: 30rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 30rpx;
  position: relative;
}

.comment-item-content-name .item-role {
  display: inline-block;
  font-size: 14rpx;

  line-height: 14rpx;
}

.comment-item-content-name .lawyer {
  border: 1rpx solid #4B73EF !important;
  border-radius: 6rpx;
  padding: 7rpx;
  color: #4B73EF !important;
}

.comment-item-content-name .official {
  border: 1rpx solid #EF4B4B;
  border-radius: 6rpx;
  color: #EF4B4B;
  padding: 7rpx;
}

.comment-item-content-name .icon {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}

.comment-item-detail-content {
  font-size: 32rpx;
  color: #666666;
}

.comment-time {
  font-size: 24rpx;
  display: inline-block;
  margin-left: 20rpx;
}

.reply-item image {
  width: 40rpx;
  height: 40rpx;
}

.fr-view {
  padding: 20rpx;
}

.all-video {
  width: 750rpx;
  background: white;
  height: calc(100vh - 420rpx);
  position: absolute;
  top: 420rpx;
  z-index: 100;
}

.all-video-cell {
  display: flex;
}

.all-video-title {
  margin: 20rpx 0 0 5%;
  flex: 1;
}

.close-img {
  width: 30rpx;
  height: 30rpx;
  padding: 22rpx 20rpx 0 0;
}

.all-video-box {
  width: 90%;
  margin: 0 auto;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.all-video-item,
.all-video-item-active {
  margin-top: 40rpx;
  width: 45%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 30rpx;
  white-space: nowrap;
}

.all-video-item {
  border: 1rpx solid #eee;
}

.all-video-item-active {
  border: 1rpx solid rgb(238, 74, 74);
  color: rgb(238, 74, 74);
}

