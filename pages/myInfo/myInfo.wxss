/* pages/myInfo/myInfo.wxss */
.address {
  width: 690rpx;
  height: 433rpx;
  background: white;
  border-radius: 10rpx;
  margin: 30rpx auto 0 auto;
}

.address-item {
  height: 108rpx;
  width: 650rpx;
  margin: 0 auto;
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 108rpx;
  border-bottom: 1rpx solid rgba(219, 219, 219, 1);
  display: flex;
  position: relative;
}
.myinfo-image {
  width: 62rpx;
  height: 62rpx;
  background: rgba(238, 238, 238, 1);
  border-radius: 50%;
  position: absolute;
  top: 50%;
  right: 30rpx;
  transform: translateY(-50%);
}
.address-item:nth-last-child(1) {
  border-bottom: 0;
}

.address-item-input {
  height: 108rpx;
  width: 80%;
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  line-height: 108rpx;
  text-align: end;
  padding-right: 30rpx;
}

.label {
  width: 20%;
}