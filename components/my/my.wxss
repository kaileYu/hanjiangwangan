@import "../../app.wxss";

.my {
  background: rgba(244, 244, 250, 1);
}

.my-info {
  width: 750rpx;
  height: 350rpx;
  display: flex;
  background: linear-gradient(180deg, rgba(58, 125, 253, 1), rgba(76, 115, 239, 0));
}

.myinfo-left {
  flex: 1;
  display: flex;
  margin: 30rpx 0 0 30rpx;
}

.myinfo-avatar {
  width: 82rpx;
  height: 82rpx;

}

.avatar {
  width: 82rpx;
  height: 82rpx;
  flex: 1;
  border-radius: 50%;
}

.myinfo-name {
  flex: 1;
  margin-left: 30rpx;
}

.myinfo-nickname,
.integral {
  font-size: 30rpx;
  color: white;
}

.myinfo-name-info,
.myinfo-integral-integral,
.myinfo-integral-record {
  font-size: 24rpx;
  color: rgba(202, 212, 248, 1);
}

.myinfo-right {
  flex: 1;
  display: flex;
  margin: 30rpx 0 0 30rpx;
}

.promote {
  width: 690rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 2rpx 12rpx 0rpx rgba(188, 195, 213, 0.23);
  border-radius: 10rpx;
  position: absolute;
  top: 160rpx;
  left: 50%;
  transform: translate(-50%);
}

.promote-top {
  display: flex;
}

.promote-top-left,
promote-top-right {
  flex: 1;
}

.promote-title,
.promote-intro {
  font-weight: 400;
  margin-left: 26rpx;
}

.promote-title {
  font-size: 30rpx;
  margin-top: 25rpx;
  color: rgba(51, 51, 51, 1);
}

.promote-intro {
  font-size: 24rpx;
  margin-top: 10rpx;
  color: rgba(153, 153, 153, 1);
}

.promote-bottom {
  display: flex;
  margin-top: 30rpx;
  flex-wrap: wrap;
}

.promote-bottom-image {
  height: 61rpx;
  width: 61rpx;
  margin-bottom: 13rpx;
}

.promote-botton-text {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  text-align: center;
}

.promote-bottom-item {
  /* flex: 1; */
  display: flex;
  width:33%;
  align-items: center;
  flex-direction: column;
  padding-bottom: 30rpx;
}

.promote-top-right {
  height: 24rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 24rpx;
  position: relative;
  top: 38rpx;
  margin-right: 22rpx;
}

.icon {
  font-size: 26rpx;
}

.welfare {
  width: 690rpx;
  margin: 255rpx auto 0 ;
  background: white;
  box-shadow: 0px 2px 12px 0px rgba(188, 195, 213, 0.23);
  border-radius: 10px;
}

.welfare-list {
  width: 630rpx;
  margin: 0 auto;
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 30rpx;
  justify-content: space-between;
  position: relative;
}

.welfare-list-item {
  align-items: center;
  justify-content: space-between;
  margin-top: 27rpx;
}
.welfare-list-item-box{
  width: 90%;
}
.welfare-list-image {
  width: 300rpx;
  height: 200rpx;
  border-radius:10px;
}

.welfare-list-title {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.welfare-list-textcell {
  display: flex;
}

.welfare-list-demand,
.welfare-list-value {
  flex: 1;
  font-size: 20rpx;
  font-weight: 400;
}

.welfare-list-demand {
  color: rgba(242, 83, 83, 1);
}

.welfare-list-value {
  color: rgba(153, 153, 153, 1);
}

.welfare-list-remain {
  text-align: end;   
  flex: 1;
  font-size: 20rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.my-bottom {
  margin: 49rpx auto 160rpx auto;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(207, 207, 207, 1);
  text-align: center;
}