/* components/screen/screen.wxss */
.screen-guide {
  position: fixed;
  width: 750rpx;
  height: 100vh;
  z-index: 1000;
  opacity: 1;
  background: white;
  line-height: 300rpx;
}

.screen-guide-bannar {
  width: 750rpx;
  height: 100%;
  overflow: hidden;
}

.screen-guide-image {
  width: 750rpx;
  height: 100%;
}

.swiper-item {
  position: relative;
}

.screeen-guide-image-text {
  position: absolute;
  top: 68.5%;
  left: 0;
  font-size: 29rpx;
  color: #888888;
  font-weight: 600;
  left: 50%;
  transform: translateX(-50%);
}

.start {
  width: 271rpx !important;
  height: 87rpx;
  background: linear-gradient(90deg, rgba(58, 125, 253, 1), rgba(76, 115, 239, 1));
  box-shadow: 0px 4px 9px 0px rgba(77, 126, 247, 0.61);
  border-radius: 44rpx;
  font-size: 36rpx;
  color: rgba(255, 255, 255, 1);
  line-height: 60rpx;
  text-align: center;
  position: absolute;
  top: 92%;
  left: 50%;
  transform: translateX(-50%);
}