/* components/ sliderTab/sliderTab.wxss */
@import "../../app.wxss";
.tab-header{
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: #fff;
}
.tab-content {
  width: 100%;
  height: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.tab-scroll-view{
  white-space: nowrap;
}
.tab-scroll-view .tab-item{
  font-size: 30rpx;
  display: inline-block;
  padding: 25rpx 40rpx;
  color:#999999;
}
.scroll-view_H{
  height: 100%;
}
.active{
  position: relative;
  color:#3E7BFA !important;
}
.active::after{
  content: '';
  position:absolute;
  width:40%;
  height:6rpx;
  background:linear-gradient(90deg,rgba(58,125,253,1),rgba(76,115,239,1));
  border-radius:3rpx;
  bottom: 0rpx;
  left: 30%;
}
