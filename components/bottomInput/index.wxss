/* components/bottomInput/index.wxss */
.bottom-input-box{
  position: fixed;
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.bottom-input {
  width:540rpx;
  height:60rpx;
  border:1rpx solid rgba(224,224,230,1);
  border-radius:10rpx;
  box-sizing: border-box;
  padding: 5rpx 20rpx;
}

.bottom-input-box button{
  width:120rpx !important;
  height:60rpx !important;
  background:linear-gradient(90deg,rgba(58,125,253,1),rgba(76,115,239,1));
  border-radius:10rpx;
  margin: 0!important;
  color:#fff;
  font-size:30rpx;
  padding: 0!important;
  line-height: 60rpx;
}